pipeline {
  agent any

  stages {
    stage('Verify Python on Jenkins agent') {
      steps {
        sh '''
          export PATH="/opt/homebrew/bin:/usr/local/bin:/bin:/usr/bin:$PATH"
          echo "PATH=$PATH"
          command -v sh
          command -v python3 || true
          python3 --version
          command -v pip3 || true
          pip3 --version
        '''
      }
    }
  }
}

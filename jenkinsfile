pipeline {
  agent any

  environment {
    PATH+EXTRA = "/opt/homebrew/bin:/usr/local/bin"
  }

  stages {
    stage('Verify Python on Jenkins agent') {
      steps {
        sh '''
          echo "PATH=$PATH"
          which python3 || true
          python3 --version
          which pip3 || true
          pip3 --version
        '''
      }
    }
  }
}
